@model Order

<div class="container mt-4">
    <h2>Create Order</h2>
    <form asp-action="Checkout" asp-controller="Order" method="post">
        <div asp-validation-summary="All" class="text-light bg-danger"></div>
        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Line1">Line 1:</label>
            <input asp-for="Line1" class="form-control" />
            <span asp-validation-for="Line1" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Line2">Line 2:</label>
            <input asp-for="Line2" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Line3">Line 3:</label>
            <input asp-for="Line3" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="City">City:</label>
            <input asp-for="City" class="form-control" />
        </div>
        <div class="form-group mb-5">
            <input asp-for="GiftWrap" class="form-check-input" />
            <label>Gift wrap these items.</label>
        </div>
        <input type="submit" class="btn btn-primary" value="Complete Order" />
    </form>
</div>