@page "/CardRazor"
@model CardRazor
@{
    ViewData["Title"] = "CardRazor";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="text-center display-6">
        CART
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Product</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Subtotal</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @*Cart? kullanmamamızın amacı eger sayfaya gelen cart boş ise boş bir cartline oluşturuluyor hata verilmesi engelleniyor. * ****Model.Cart?.CartLines ?? Enumerable.Empty()) burada Cartline eğer NULL ise boş bir Cartline listesi döndürülür.
            *@

            @foreach (var item in Model.Cart?.CartLines ?? Enumerable.Empty<CartLine>())
            {
                <tr>
                    <th>@item.Product.ProductName</th>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price.ToString("c")</td>
                    <td>@((item.Product.Price * item.Quantity).ToString("c2"))</td>
                    <td>
                        <form method="post" asp-page-handler="Remove">
                            <input type="hidden" name="productId" value="@item.Product.ProductId">
                            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl">
                            <button class="btn btn-sm btn-danger">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>

            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">
                    TOTAL
                </td>
                <td class="text-right text-danger">
                    @Model.Cart?.ComputeTotalValue().ToString("c2")
                </td>
            </tr>
        </tfoot>
    </table>
</div>