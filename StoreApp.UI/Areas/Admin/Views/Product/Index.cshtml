@model IEnumerable<Product>
@{
    Layout = "_AdminLayout";
}
@section css{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@5.15.3/css/all.min.css">
}
<div class="container text-center">
    <h1>Product List</h1>
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create" asp-controller="Product" asp-area="Admin">
            Create
        </a>

    </div>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">ID</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">#</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>#</th>
                    <th scope="row">@item.ProductId</th>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td scope="col"><a asp-action="Update" asp-controller="Product" asp-route-id="@item.ProductId" asp-area="Admin" class="btn btn-primary">GÃ¼ncelle</a></td>
                    <td scope="col"><a asp-action="Delete" asp-controller="Product" asp-route-id="@item.ProductId" asp-area="Admin" class="btn btn-danger">Sil</a></td>
                </tr>
            }

        </tbody>
    </table>

</div>
