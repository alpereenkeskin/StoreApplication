@model ProductCreateDto
@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}
<div class="container mt-4 w-50">
    <h1>Ürün Formu</h1>
    <form asp-action="Create" asp-controller="Product" method="post" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group mb-2">
            <label for="productName">Ürün İsmi</label>
            <input type="text" class="form-control" asp-for="@Model.ProductName" placeholder="Ürün İsmi">
        </div>

        <div class="form-group mb-2">
            <label for="Summary">Summary</label>
            <input type="text" class="form-control" asp-for="@Model.Summary" placeholder="Summary">
        </div>

        <div class="form-group mb-2">
            <label for="ImagePath">Image</label>
            <input name="file" type="file" class="form-control" placeholder="Ürün İsmi">
        </div>

        <div class="form-grouo mb-2">
            <label asp-for="CategoryId">Select Category</label>
            <select class="form-control" asp-items="ViewBag.Categories" asp-for="CategoryId">
                <option>Select Category</option>
            </select>
        </div>
        <div class="form-group mb-2">
            <label for="productPrice">Ürün Fiyatı</label>
            <input type="number" class="form-control" asp-for="@Model.Price" placeholder="Ürün Fiyatı">
        </div>
        <button type="submit" class="btn btn-primary float-right">Kaydet</button>
    </form>
</div>
