@model Product
@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}
<div class="container mt-4 w-50">
    <h1>Ürün Formu</h1>
    <form asp-action="Create" asp-controller="Product" asp-area="Admin" method="post">
        <div class="form-group mb-2">
            <label for="productName">Ürün İsmi</label>
            <input type="text" class="form-control" asp-for="@Model.ProductName" placeholder="Ürün İsmi">
        </div>
        <div class="form-group mb-2">
            <label for="productPrice">Ürün Fiyatı</label>
            <input type="number" class="form-control" asp-for="@Model.Price" placeholder="Ürün Fiyatı">
        </div>
        <button type="submit" class="btn btn-primary float-right">Kaydet</button>
    </form>
</div>
